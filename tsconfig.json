{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["DOM", "DOM.Iterable", "ES6"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "module": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/components/*": ["src/components/*"],
            "@/api/*": ["src/api/*"],
            "@/types/*": ["src/types/*"],
            "@/utils/*": ["src/utils/*"],
            "@/popup/*": ["popup/*"],
            "@/options/*": ["options/*"],
            "@/content/*": ["content/*"],
            "@/background/*": ["background/*"]
        },
        "types": ["vite/client", "chrome"]
    },
    "include": [
        "src/**/*",
        "popup/**/*",
        "options/**/*",
        "content/**/*",
        "background/**/*",
        "*.ts",
        "*.vue"
    ],
    "exclude": ["node_modules", "dist", "**/*.d.ts"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
